{
  "name": "vscode-ruff",
  "displayName": "vscode-ruff",
  "description": "the extension for ruff developers",
  "version": "0.0.1",
  "publisher": "wfnuser",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ruff.rapLog",
    "onCommand:ruff.rapDeploy",
    "onCommand:ruff.rapInit"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "Ruff Extension Configuration",
      "type": "object",
      "properties": {
        "ruff.rootDirectory": {
          "type": "string",
          "default": "~",
          "description": "root directory"
        },
        "ruff.defaultProjectName": {
          "type": "string",
          "default": "NewRuffProject",
          "description": "projectname"
        }
      }
    },
    "commands": [
      {
        "command": "ruff.rapDeploy",
        "title": "Ruff API: Deploy Code"
      },
      {
        "command": "ruff.rapLog",
        "title": "Ruff API: Get Ruff Log"
      },
      {
        "command": "ruff.rapInit",
        "title": "Ruff API: Initialize a project",
        "icon": {
          "light": "../img/run.svg",
          "dark": "../img/run.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "ruff.rapInit",
        "key": "alt+ctrl+n",
        "mac": "alt+cmd+`"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == js",
          "command": "ruff.rapInit",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.1.4",
    "vscode": "^1.0.0",
    "@types/node": "*"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "q": "^1.4.1"
  }
}
